    <div class="container" ><div class="row">
    <div class="col-sm-2 text-center">
    <a href="/"><img src="/public/images/logo.PNG" width="146.496px" height="55.381px"></a>
    </div>
    <div class="col-sm-6" style="margin: auto;">
    <center>
    <form class="form-inline" action="/search" method="POST">
    <input class="form-control mr-sm-2" type="text" name="search" id="search" placeholder="Nhập nội dung tìm kiếm" style="
    width: 426px;" required>    
    <button class="btn search" type="submit"><i class="fas fa-search"></i>Tìm Kiếm</button>
    </form>
    </center></div>
    <div class="col-sm-3 text-right" style="margin: auto;">
    {{#if lcIsAuthenticated}}     
        <div class="btn-group">
            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img src="/public/images/noavatar.jpg" height="24" width="24" class="rounded-circle" alt="">
                {{lcAuthUser.UserName}}
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                <div class="dropdown-item border-bottom">
                    <i class="far fa-money-bill-alt"></i> {{lcAuthUser.tien}} VNĐ<br/>
                    Tài khoản Premium
                </div>
                <a class="dropdown-item" href="/profile"><i class="far fa-address-card"></i> Cá nhân</a>
                {{#if lcWriter}}
                    <a class="dropdown-item" href="/writerpanel"><i class="fas fa-user-cog"></i> Writer Panel</a>
                {{/if}}
                {{#if lcEditor}}
                    <a class="dropdown-item" href="/editorpanel"><i class="fas fa-user-cog"></i> Editor Panel</a>
                {{/if}}
                {{#if lcAdmin}}
                    <a class="dropdown-item border-bottom" href="/admin"><i class="fas fa-user-cog"></i> Admin Panel</a>
                {{/if}}
                <a href="/dangxuat" class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>

            </div>
        </div>
    {{else}}
        <a href="/dangky" class="btn btn-light border text-secondary"><i class="fas fa-user-plus"></i> Đăng ký</a>
        <a href="/dangnhap" class="btn btn-light border text-secondary"><i class="fas fa-user"></i> Đăng nhập</a>
    {{/if}}
    </div>
    
    </div>
      </div> 

    <div class="sticky-top" style="z-index: 3;">
    <nav class="navbar navbar-dark" style="
    padding: 0px 137px 0px 137px;
    margin-left: 0px;
    background-color: #2f46a3";>
        <div id="menu">
            <ul>
            <li>
                <a href="/post/hot">NÓNG</a>
            </li>
            <li>
                <a href="/post/new">MỚI</a>
            </li>
            </ul>
        </div>
        
        <button class="navbar-toggler " type="button" data-toggle="dropdown" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>
    <div class="collapse" id="navbarToggleExternalContent">
    <div class="shadow-sm p-4 "><div class="container">
                <div class="row">

        {{#each lcCategories}}
            <div class="col-sm-2" style="{{xd}} margin-right: 30px">
                <div class="chuyenmuc"><a href="/cat/{{CID}}">{{CName}}</a></div>
                    {{#each subcategories}}
                    <div class="subcate">
                        <a href="/subcat/{{SCID}}" class="text-dark">{{SCName}}</a>
                    </div>
                    {{/each}}
            </div>
            <div class="khoangtrang"></div>
        {{/each}}   
