</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active card card-body" style="padding: 0px" id="home" role="tabpanel" aria-labelledby="home-tab">
      {{#if this.empty}}
        <div class="card-body">
            <p class="card-text">Không có dữ liệu.</p>
        </div>
        {{else}}
  <table class="table table-hover">
            <thead class="bg-light text-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Bài viết</th>
            </tr>
            </thead>
            <tbody>
            {{#each this.post}}
                <td>{{PostID}}</td>
                <td>
                <div class="row">
                    <div class="col-sm-2">
                        <img src="/public/images/avatarPost/{{PostID}}.png" alt="" width="120px" height="100px">
                    </div>
                    <div class="col-sm-6">
                        <strong>{{PostTitle}}</strong><br/>
                <span class="badge badge-pill badge-light text-secondary">{{CName}}{{SCName}}</span>
                <span class="badge badge-pill badge-light text-secondary">{{Time}}</span>
                <span class="badge badge-pill badge-light text-secondary">{{StatusPost}}</span>
                <span class="badge badge-pill badge-light text-secondary">{{F_TimePublic}}</span>
                {{#if Reason}}
                    <span class="badge badge-pill badge-light text-secondary">Lí do: {{Reason}}</span>
                {{/if}}
                    </div>
                    <div class="col-sm-4 text-right">
                    <a href="/admin/posts/edit/{{PostID}}" class="btn btn-primary btn-sm"><i class="far fa-edit"></i></a>
