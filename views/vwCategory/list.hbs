{{#section 'title'}}Quản lý chuyên mục - {{/section}}

<div class="row">
    <div class="col-sm-3">
        <div class="card">
            <div class="card-header bg-success text-light">Admin Panel</div>
            <div class="list-group">
                <a href="/admin/posts" class="list-group-item list-group-item-action" ><i class="fas fa-arrow-circle-right"> Quản lý bài đăng</i></a>
                <a href="/admin/users" class="list-group-item list-group-item-action" ><i class="fas fa-arrow-circle-right"> Quản lý người dùng</i></a>
            </div>
                    </div>
    </div>
    
    <div class="col-sm-9">
        <div class="card">
            <div class="card-header d-flex justify-content-between bg-success text-light">
                <h4>Chuyên mục lớn </h4>
                <a class="btn btn-outline-light" href="/admin/categories/add" role="button">
                <i class="fa fa-plus" aria-hidden="true"></i> Thêm chuyên mục lớn
                </a>
        </div>
        {{#if this.empty}}
        <div class="card-body">
            <p class="card-text">Không có dữ liệu.</p>
        </div>
        {{else}}
        </div>
        <table class="table table-hover">
            <thead class="bg-light text-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên chuyên mục lớn</th>
                <th scope="col">&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {{#each this.categories}}
            {{#if del}}
                <tr class="bg-danger">
            {{else}}
                <tr>
            {{/if}}
                <td id="{{CID}}">{{CID}}</td>
                <td>{{CName}}</td>
                <td class="text-right">
                    <a href="/admin/categories/edit/{{CID}}" class="btn btn-primary btn-sm"><i class="far fa-edit"></i></a>
                    <a href="/admin/subcategories/{{CID}}" class="btn btn-primary btn-sm"><i class="fas fa-arrow-circle-right"></i></a>
                {{#if del}}
                    <a href="/admin/categories/restore/{{CID}}" class="btn btn-success btn-sm"><i class="fas fa-trash-restore"></i></a>
                    <a href="/admin/categories/delete/{{CID}}" class="btn btn-danger btn-sm border-dark"><i class="fas fa-trash-alt"></i></a>
                {{else}}
                    <a href="/admin/categories/del/{{CID}}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                {{/if}}
                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>
        {{/if}}
    </div>
</div>