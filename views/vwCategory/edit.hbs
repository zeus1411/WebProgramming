{{#section 'title'}}Chỉnh sửa chuyên mục {{this.category.CName}} - {{/section}}

<div class="card">
  <div class="card-header">
    <h4>Sửa chuyên mục</h4>
  </div>
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="txtCID">#</label>
        <input type="text" class="form-control" id="txtCID" name="CID" readonly value="{{this.category.CID}}">
      </div>
      <div class="form-group">
        <label for="txtCName">Category</label>
        <input type="text" class="form-control" id="txtCName" name="CName" autofocus
          value="{{this.category.CName}}">
      </div>
      <a class="btn btn-success" href="/admin/categories" role="button" title="Back to List">
        <i class="fa fa-backward" aria-hidden="true"></i>
      </a>
      <a class="btn btn-danger" href="/admin/categories/del/{{this.category.CID}}" role="button" title="Back to List">
        <i class="fa fa-trash" aria-hidden="true"></i>
      </a>
      <button type="submit" class="btn btn-primary" formaction="/admin/categories/update">
        <i class="fa fa-check" aria-hidden="true"></i>
        Lưu
      </button>
    </form>
  </div>
</div>